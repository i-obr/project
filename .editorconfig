root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.js]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space

[Makefile]
indent_style = tab
indent_size = 4

[package.json]
indent_style = space
indent_size = 2

